<definition component-name="portal-wcm">
	<property name="portal.release" value="true" />
	<property name="portal.upstream" value="true" />
	<property name="testray.main.component.name" value="Layout Page Templates" />

	<set-up>
		<execute macro="TestCase#setUpPortalInstance" />

		<execute macro="User#firstLoginPG" />

		<execute macro="JSONGroup#addGroup">
			<var name="groupName" value="Site Name" />
		</execute>

		<execute macro="Navigator#openWithAppendToBaseURL">
			<var name="urlAppend" value="group/site-name/~/control_panel/manage?p_p_id=com_liferay_staging_processes_web_portlet_StagingProcessesPortlet&amp;p_p_lifecycle=0&amp;p_p_state=maximized&amp;p_v_l_s_g_id=36653&amp;p_p_auth=FB4rLFyh" />
		</execute>

		<execute macro="Staging#activateStagingCP">
			<var name="siteName" value="Site Name" />
		</execute>
	</set-up>

	<tear-down>
		<var method="PropsUtil#get('test.portal.instance')" name="testPortalInstance" />
		<if>
			<equals arg1="${testPortalInstance}" arg2="true" />
			<then>
				<execute macro="PortalInstances#tearDownCP" />
			</then>
			<else>
				<execute macro="Site#tearDownCP" />
			</else>
		</if>
	</tear-down>

	<command name="AssertPageTemplateNotEditableinStagingLiveSite" priority="5">
		<execute macro="Navigator#openWithAppendToBaseURL">
			<var name="urlAppend" value="group/site-name-staging/~/control_panel/manage?p_p_id=com_liferay_layout_admin_web_portlet_GroupPagesPortlet&amp;p_p_lifecycle=0&amp;p_p_state=maximized&amp;p_p_auth=gxCiOUg3" />
		</execute>

		<execute function="AssertVisible" locator1="NavBar#NAV_ITEM_LINK">
			<var name="key_navItem" value="Page Templates" />
		</execute>

		<execute macro="Navigator#openWithAppendToBaseURL">
			<var name="urlAppend" value="group/site-name/~/control_panel/manage?p_p_id=com_liferay_layout_admin_web_portlet_GroupPagesPortlet&amp;p_p_lifecycle=0&amp;p_p_state=maximized&amp;p_p_auth=gxCiOUg3" />
		</execute>

		<execute function="AssertElementNotPresent" locator1="NavBar#NAV_ITEM_LINK">
			<var name="key_navItem" value="Page Templates" />
		</execute>
	</command>
</definition>